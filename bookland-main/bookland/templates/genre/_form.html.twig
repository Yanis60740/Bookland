{% if errors is not empty %}
  <div class="alert alert-danger col-md-5">
    {% for error in errors %}
      <ul style="margin: 0px">
        <li>{{ error }}</li>
          </ul>
    {% endfor %}
  </div>
{% endif %}
{{ form_start(form) }}

<form class="">
  <div class="form-row">
    <div class="col-md-4">
      <div class="position-relative form-group">
        <label for="nom">Nom</label>
        {{ form_widget(form.nom, {'attr': {'class': 'form-control'
        }}) }}
      </div>
    </div>
  <button style="margin: 20px 0" type="submit" class="btn btn-primary">{{ button_label|default('Confirmer') }}</button>
</form>
{{ form_end(form) }}