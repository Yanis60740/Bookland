<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Bienvenue !{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" 
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
            
            <link rel="stylesheet" href="{{ asset('css/app.css') }}" type="text/css">
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" 
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

            <script src="https://kit.fontawesome.com/6863b449ec.js" crossorigin="anonymous"></script>

            <script type="text/javascript" src="{{ asset('js/app.js') }}"></script>

        {% endblock %}
    </head>
    <body>
        <!--Voir pour rajouter la class active avec jquery-->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="margin-bottom: 5px;">
            <a class="navbar-brand" href="{{ path('main') }}" style="margin-left: 10px;"><i class="fas fa-book"></i> Bookland</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" 
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('main') }}">
                        <i class="fas fa-home"></i>
                        Accueil 
                        <span class="sr-only"></span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('auteur_index') }}">
                        <i class="fas fa-pen-nib"></i>
                        Auteurs
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('livre_index') }}">
                        <i class="fas fa-book-reader"></i>
                        Livres
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('genre_index') }}">
                        <i class="fas fa-scroll"></i>
                        Genres
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('actions_index') }}">
                        <i class="fas fa-directions"></i>
                        Actions
                    </a>
                </li>
                </ul>
            </div>
        </nav>


        <div class="container">
            {% for message in app.flashes('notification') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}

            {% block body %}
            
            {% endblock %}
        </div>
    </body>
</html>
